{
    "index_patterns": [
        "tika_eval"
    ],
    "mappings": {
        "_meta": {
            "version": "7.4.2"
        },
        "dynamic": "false",
        "properties": {
            "@timestamp": {
                "type": "date"
            },
            "content": {
                "analyzer": "text_basic",
                "type": "text",
                "index_options": "offsets"
            },
            "content_trunc": {
                "analyzer": "text_basic",
                "type": "text"
            },
            "is_embedded": {
                "type": "boolean"
            },
            "container_id": {
                "type": "keyword"
            },
            "container_path":{
                "type":"keyword"                
            },
            "md5":{
                "type":"keyword"
            },
            "sha256":{
                "type":"keyword"
            },
            "lang": {
                "type": "keyword"
            },
            "lang_conf": {
                "type": "double"
            },
            "length": {
                "type": "integer"
            },
            "num_attachments": {
                "type":"integer"
            },
            "num_inline_attachments": {
                "type":"integer"
            },
            "num_macros": {
                "type":"integer"
            },
            "embedded_depth": {
                "type": "integer"
            },
            "mime_detailed": {
                "analyzer": "text_basic",
                "copy_to": "mime_detailed_facet",
                "type": "text"
            },
            "mime_detailed_facet": {
                "normalizer": "lc_normalizer",
                "type": "keyword"
            },
            "pdf_version": {
                "type": "keyword"
            },
            "pdf_extension_version": {
                "type": "keyword"
            },
            "pdfa_version": {
                "type": "keyword"
            },
            "format": {
                "type": "keyword"
            },
            "has_xfa": {
                "type": "boolean"
            },
            "has_xmp": {
                "type": "boolean"
            },
            "has_acrofields": {
                "type": "boolean"
            },
            "mime": {
                "analyzer": "text_basic",
                "copy_to": "mime_facet",
                "type": "text"
            },
            "mime_facet": {
                "normalizer": "lc_normalizer",
                "type": "keyword"
            },
            "creator_tool": {
                "analyzer": "text_basic",
                "copy_to": "creator_tool_facet",
                "type": "text"
            },
            "creator_tool_facet": {
                "normalizer": "lc_normalizer",
                "type": "keyword"
            },
            "signature": {
                "type": "boolean"
            },
            "missing_content": {
                "type": "boolean"
            },
            "num_alpha_tokens": {
                "type": "integer"
            },
            "num_common_tokens": {
                "type": "integer",
                "index": true,
                "store": true
            },
            "num_tokens": {
                "type": "integer",
                "index": true
            },
            "oov": {
                "type": "double",
                "store": true
            },
            "pdf_percent_unicode_mapped": {
                "type": "double",
                "store": true
            },
            "stacktrace": {
                "analyzer": "text_basic",
                "type": "text"
            },
            "stacktrace_facet": {
                "normalizer": "lc_normalizer",
                "type": "keyword"
            },
            "token_entropy": {
                "type": "double"
            },
            "tokens_per_page": {
                "type": "double",
                "index": true
            },
            "created":{
              "type": "date",
              "store": true
            },
            "container_created":{
              "type": "date",
              "store": true
            },
            "modified":{
              "type": "date",
              "store": true
            }
        }
    },
    "settings": {
        "index": {
            "analysis": {
                "analyzer": {
                    "text_basic": {
                        "filter": [
                            "lowercase",
                            "asciifolding",
                            "trim_final_period"
                        ],
                        "tokenizer": "uax_url_email",
                        "type": "custom"
                    }
                },
                "filter": {
                    "trim_final_period": {
                        "pattern": "\\.$",
                        "replacement": "",
                        "type": "pattern_replace"
                    }
                },
                "normalizer": {
                    "lc_normalizer": {
                        "char_filter": [],
                        "filter": [
                            "lowercase",
                            "asciifolding"
                        ],
                        "type": "custom"
                    }
                }
            },
            "number_of_replicas": "1",
            "number_of_shards": "1"
        }
    }
}